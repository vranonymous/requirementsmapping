pages = {677-687},
year = {2007},
issn = {0965-9978},
doi = {https://doi.org/10.1016/j.advengsoft.2006.10.007},
url = {https://www.sciencedirect.com/science/article/pii/S096599780600175X},
author = {Stefan Boddy and Yacine Rezgui and Grahame Cooper and Matthew Wetherill},
keywords = {Semantic Web services, Process integration, Computer integrated construction, Product data modelling},
abstract = {We present a review of the computer integrated construction (CIC) research space spanning approximately 20 years. This review reveals a strong focus on data and application integration for most of that time. We argue that whilst valuable in its own right, such research and the software solutions it yields fall short of the potential for CIC, giving our rationale for these beliefs. Thus we propose a re-focussing of CIC research on the relatively under-represented area of semantically described and coordinated process oriented systems to better support the kind of short term virtual organisation that typifies the working environment in the construction sector. Finally we present an outline vision for such a system, supported by a generic system architecture and a simple business model for its deployment, noting opportunities for future work in its realisation.}
}
@article{QIN2003153,
title = {A framework of web-based conceptual design},
journal = {Computers in Industry},
