journal = {Computer-Aided Design},
volume = {29},
number = {10},
pages = {727-735},
year = {1997},
issn = {0010-4485},
doi = {https://doi.org/10.1016/S0010-4485(97)00015-8},
url = {https://www.sciencedirect.com/science/article/pii/S0010448597000158},
author = {SC Lu and AB Rebello and RA Miller and GL Kinzel and R Yagel},
keywords = {design for manufacturability, die casting, volume visualization, geometric reasoning},
abstract = {Due to the nature of the die casting process, the part geometry restricts the die design significantly and hence affects the quality of the part. However, as is often the case in other manufacturing processes, the manufacturability of die castings is not considered until the design has been nearly completed and detailed. Primarily, this is due to the limited capability of current Computer-Aided Engineering (CAE) tools to support design evaluation, especially during preliminary design. In this paper, we present a new volume-based geometric reasoning and visualization approach to support this task. This system is very efficient in terms of computation time and can evaluate the whole range of designs regardless of their shape complexity. In addition, it is very simple-to-use and the results are self-evident. The current focus is on thermal- and flow-related problems in die casting. Our approach, however, is general and can be applied to other manufacturing processes.}
}
@article{MUN20031171,
